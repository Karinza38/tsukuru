{
  "name": "tsukeru",
  "version": "0.3.1",
  "description": "Enables you to build a TypeScript package that's compatible with both CommonJS and ES Modules",
  "keywords": [
    "esm",
    "module",
    "commonjs",
    "typescript",
    "tsc",
    "library",
    "package",
    "hybrid"
  ],
  "main": "lib",
  "types": "lib",
  "bin": "lib/cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-fischer/tsukeru.git"
  },
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "funding": "https://github.com/sponsors/d-fischer",
  "license": "MIT",
  "dependencies": {
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.14.0",
    "@oclif/errors": "^1.2.2",
    "@oclif/plugin-help": "^2.2.3",
    "@types/node": "^12.12.14",
    "@types/rimraf": "^2.0.3",
    "chalk": "^3.0.0",
    "rimraf": "^3.0.2",
    "tslib": "^1.10.0",
    "typescript": "~3.8.2"
  },
  "devDependencies": {
    "@d-fischer/eslint-config": "^1.0.3",
    "eslint": "^6.7.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib"
  ],
  "scripts": {
    "lint": "eslint --ext ts src",
    "prettier:check": "prettier --check 'src/**'",
    "prettier:fix": "prettier --write 'src/**'",
    "build": "tsc",
    "rebuild": "rimraf lib && yarn run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
